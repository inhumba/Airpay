block custom-header-script


//-//- Body
block body
	- var bodyClass= ''; // body class
	include master/bodyclass.pug


		//-//- Page Wrapper
		#page.site-wrapper
 
			//-//- Header
			header#masthead.site-header

				.container
					.row.align-items-center

						.col-2
							a.btn-back(href="#") Back

						.col-8
							h1.title Page Title ชื่อหน้า

						.col-2
							a.btn-next(href="#") Next


			//-//- Main Content
			#content.site-content


				//-//- Primary Content
				#primary.content-area
					main#main.site-main

					.card._border-bottom-color
						.container
							.row

								.col
									header.card-header
										h2.topic Page Topic หัวข้อหลัก<br>topic new line บรรทัดใหม่


					.card
						.container
							.row

								.col
									header.card-header
										h3.topic Page Topic หัวข้อหลัก
										h4.subtopic Sub Topic หัวข้อรอง

									article
										.form-list
											label.label label left ข้อความซ้าย<abbr class="required" title="required">*</abbr>
											input.field(type="text", placeholder="input field")
										.form-list
											label.label label left ข้อความซ้าย
											input.field(type="text", placeholder="input field เลือก")
										.form-list
											label.label input
											input.field._icon(type="text", placeholder="เลือก")
										.form-list
											label.label select
											select.selectpicker.field._icon(title="เลือก")
												option ไก่หมูหมึกกุ้งทั้งขี้หมู
												option 2
												option 3
										.form-list
											label.label ข้อความซ้าย
											input.field(type="text", value="ใส่ข้อความขวา")
										.form-list
											<form role="form">
												<div class="form-check abc-radio abc-radio-primary form-check-inline">
													<input class="form-check-input" type="radio" name="radio1" id="radio1" value="option1" checked>
													<label class="form-check-label" for="radio1">One</label>
												</div>
												<div class="form-check abc-radio abc-radio-primary form-check-inline">
													<input class="form-check-input" type="radio" name="radio1" id="radio2" value="option2">
													<label class="form-check-label" for="radio2">Two</label>
												</div>
											</form>
										.form-list
											.form-check.abc-checkbox.abc-checkbox-primary.abc-checkbox-circle._flex-grow-2
												<input class="form-check-input" id="checkbox1" type="checkbox">
												<label class="form-check-label" for="checkbox1">Check me out</label>

					.card._pb-10
						.container
							.row

								.col

									article
										.text-list
											p ข้อความซ้าย <a class="btn" href="#" data-toggle="tooltip" data-placement="top" title="Tooltip on top">Tooltip on top</a>
											p ข้อความขวา

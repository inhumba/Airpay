//-//- Use Master Template Base
extends master/base.pug


//-//- Page Title
block title
	title Template


//-//- Custom Meta
block custom-meta
	meta(name="description", content="Page description")


//-//- Custom Style
block custom-style


//-//- Custom Header Script
block custom-header-script


//-//- Body
block body
	- var bodyClass= ''; // body class
	include master/bodyclass.pug


		//-//- Page Wrapper
		#page.site-wrapper
 
			//-//- Header
			header#masthead.site-header

				.container
					.row

						.col-2
							a.btn-back(href="#") Back

						.col-8
							h1.title Page Title

						.col-2
							a.btn-next(href="#") Next


			//-//- Main Content
			#content.site-content


				//-//- Primary Content
				#primary.content-area
					main#main.site-main

					.card._border-bottom-color
						.container
							.row

								.col
									h2.topic Page Topic<br>topic new line


					.card
						.container
							.row

								.col
									h3.topic Page Topic
									h4.subtopic Sub Topic

					.card
						.container
							.row

								.col
									h3 Card



			//- Secondary Content
			#secondary.sidebar-area
				aside#sidebar.site-sidebar

					.card.page-action
						.container
							.row

								.col
									.action-meta
										p text left
										p text right

									a.btn.btn-primary.btn-block(href="#") button

					.card.page-action._transparent
						.container
							.row

								.col
									a.btn.btn-primary.btn-block(href="#") button

					.card.page-action._fixed
						.container
							.row

								.col
									a.btn.btn-primary.btn-block(href="#") button


		//-//- Main Script
		block script
			include script/master-script.js

		</body>
